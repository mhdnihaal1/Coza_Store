      <div class="container-fluid">
        <div class="card">
          <div class="card-body"> 
              <a href="adddiscount">
            <span>
            <button>Add discount</button>
          </span>
            </a>
            
            <h5 class="card-title fw-semibold mb-4 text-center">discount Details</h5>

         
            <table id="table">
                <thead>

                  <tr>
                    <th>Discount</th>
                    <th>Date Started</th>
                    <th>Date End</th>
                    <th>Action</th>
               
                  </tr>
                </thead>

                 <tbody>
                      
                    <% discounts.forEach((discount) => { %>
                        <tr>  
                        <td><%= discount.discountPrice %></td>
                        <td><%= discount.discountStarted.toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                        <td><%= discount.discountEnd.toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></td>
                        <td>
                            <button class="btn btn-edit bg-success">Edit</button>
                            <button class="btn btn-remove bg-danger">Remove</button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
              
          </div>
        </div>
      </div>
