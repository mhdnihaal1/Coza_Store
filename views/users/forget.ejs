<% include('../layouts/header.ejs') %>

<head>
    <style>
        body {
            background: url('https://source.unsplash.com/random/1920x1080') no-repeat center center fixed;
            background-size: cover;
            background-color: #6c757d;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .content-container {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
            padding: 30px; /* Increased padding for a more prominent look */
            max-width: 400px; /* Increased max-width for better responsiveness */
            width: 100%;
            text-align: center;
        }

        .form-control {
            background-color: transparent;
            border: 2px solid #6c757d; /* Matching border color with the background */
            color: #fff;
            border-radius: 8px;
            margin-bottom: 20px; /* Increased margin for better spacing */
            padding: 15px; /* Increased padding for input fields */
            width: 100%;
        }

        .btn-primary {
            background-color: #1aff00;
            border: 2px solid #1aff00;
            border-radius: 8px;
            color: #fff;
            cursor: pointer;
            padding: 15px; /* Increased padding for a more prominent look */
            width: 100%;
            transition: background-color 0.3s; /* Smooth transition on background color change */
        }

        .btn-primary:hover {
            background-color: #97be97;
        }

        h1, h4 {
            color: #201a1a;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container-fluid py-5">
        <div class="row">
            <!-- Forget Password Form Container -->
            <div class="col-md-6 mx-auto">
                <div class="content-container">
                    <h1 class="mt-3">Forget Password</h1>
                    <% if (typeof message !== 'undefined') { %>
                        <h4 class="text-light"><%= message %></h4>
                    <% } %>

                    <form action="/forget" method="post">
                        <div class="mb-3 mt-4">
                            <input type="email" name="email" class="form-control" required placeholder="Enter email">
                        </div>
                  
                        <div class="text-center">
                            <button type="submit" value="send reset link" class="btn btn-primary bg-success">Send Reset Link</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>

