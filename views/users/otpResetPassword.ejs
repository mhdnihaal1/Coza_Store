<% include('../layouts/header.ejs') %>

<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: url('https://source.unsplash.com/random/1920x1080') no-repeat center center fixed;
            background-size: cover;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .content-container {
            background-color: rgba(255, 255, 255, 0.95);
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            padding: 30px;
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

        .otp-input {
            width: 40px;
            height: 40px;
            font-size: 18px;
            text-align: center;
            margin: 0 8px;
            border: 2px solid #6c757d; /* Matching border color with the background */
            border-radius: 8px;
            outline: none;
            color: #6c757d; /* Matching text color with the border */
        }

        .submit-btn {
            background-color: #1aff00;
            color: #fff;
            padding: 15px; /* Increased padding for a more prominent look */
            font-size: 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%;
        }

        .submit-btn:hover {
            background-color: #00cc00;
        }

        h2, p {
            margin-bottom: 20px;
            color: #6c757d; /* Matching text color with the border */
        }
    </style>
</head>
<body>

<div class="container-fluid py-5">
    <div class="row">
        <!-- OTP Entry Form Container -->
        <div class="col-md-6 mx-auto">
            <div class="content-container">
                <h2 class="mb-4">Enter OTP</h2>
                <p>We have sent a one-time password to your mobile number.</p>
                
                <form action="/otpresetpasswordverify" method="post">
                    <input class="otp-input" name='otp1' type="text" maxlength="1" oninput="jumpToNext(this, 'otp2')" />
                    <input class="otp-input" name='otp2' type="text" maxlength="1" oninput="jumpToNext(this, 'otp3', 'otp1')" />
                    <input class="otp-input" name='otp3' type="text" maxlength="1" oninput="jumpToNext(this, 'otp4', 'otp2')" />
                    <input class="otp-input" name='otp4' type="text" maxlength="1" oninput="jumpToNext(this, 'otp5', 'otp3')" />
                    <input class="otp-input" name='otp5' type="text" maxlength="1" oninput="jumpToNext(this, 'otp6', 'otp4')" />
                    <input class="otp-input" name='otp6' type="text" maxlength="1" oninput="jumpToNext(this, '', 'otp5')" /><br><br>
                    <button class="submit-btn" type="submit">Submit OTP</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function jumpToNext(currentInput, nextInputName, prevInputName) {
        if (currentInput.value.length === 1) {
            if (nextInputName !== '') {
                document.getElementsByName(nextInputName)[0].focus();
            }
        } else if (currentInput.value.length === 0 && prevInputName !== '') {
            document.getElementsByName(prevInputName)[0].focus();
        }
    }
</script>

