    <div>
       <% if(address){ %>
        <% for(let i = 0; i < address.address.length; i++) { %>
            <div class="box">
                <h3>Address</h3>
                <%= address.address[i].name %> <%= address.address[i].mobile %> <br>
                <%= address.address[i].Housenumber %>, <%= address.address[i].area %>, <%= address.address[i].state %>-<%= address.address[i].pincode %>
                <br>
                <button class="btn btn-danger" id="deletebtn" addressId='<%= address.address[i]._id %>'>Delete</button>
                <!-- Edit button with data index attribute -->
                <button class="btn btn-secondary profileEdit" data-index="<%= i %>" data-bs-toggle="modal" data-bs-target="#editModal<%= i %>">Edit</button>
                <!-- Edit Modal with unique ID -->
                <div class="modal fade" id="editModal<%= i %>" tabindex="-1" aria-labelledby="editModalLabel<%= i %>" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel<%= i %>">Edit Profile</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Edit Form -->
                                <form action="/addressEdit" id="editForm" method="post">
                                    <div class="mb-3">
                                        <input type="hidden" name="_id" value=" <%= address.address[i]._id %>">
                                        <label for="editName" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="editName" name="name" value="<%= address.address[i].name %>">
                                    </div>

                                    <div class="mb-3">
                                        <label for="mobile" class="form-label">Mobile </label>
                                        <input type="mobile" class="form-control" id="mobile" name="mobile" value="<%= address.address[i].mobile %>">
                                        </div>
                                        <div class="mb-3">
                                        <label for="Housenumber" class="form-label">Housenumber</label>
                                        <input type="Housenumber" class="form-control" id="Housenumber" name="Housenumber" value="<%= address.address[i].Housenumber %>">
                                        </div>
                                        <div class="mb-3">
                                          <label for="area" class="form-label">Area</label>
                                          <input type="area" class="form-control" id="area" name="area" value="<%= address.address[i].area %>">
                                        </div>
                                        <div class="mb-3">
                                          <label for="state" class="form-label">State</label>
                                          <input type="state" class="form-control" id="state" name="state" value="<%= address.address[i].state %>">
                                        </div>
                                        <div class="mb-3">
                                          <label for="pincode" class="form-label">Pincode</label>
                                          <input type="pincode" class="form-control" id="pincode" name="pincode" value="<%= address.address[i].pincode %>">
                                        </div>    
                                        <div class="" id="message"></div>                         
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="saveChanges">Save Changes</button>
                            </div>
                        </form>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
